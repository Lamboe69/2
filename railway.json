{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt --no-cache-dir",
    "startCommand": "streamlit run app_updated.py --server.port $PORT --server.headless true --server.address 0.0.0.0"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
